+++ b/drivers/input/serio/hyperv-keyboard.c	2017-11-17 10:41:14.214660986 -0800
@@ -424,6 +424,9 @@ static struct  hv_driver hv_kbd_drv = {
 	.id_table = id_table,
 	.probe = hv_kbd_probe,
 	.remove = hv_kbd_remove,
+        .driver = {
+               .probe_type = PROBE_PREFER_ASYNCHRONOUS,
+        },
 };
 
 static int __init hv_kbd_init(void)
--- a/drivers/net/hyperv/netvsc_drv.c	2017-11-17 10:41:14.218660936 -0800
+++ b/drivers/net/hyperv/netvsc_drv.c	2017-11-17 10:41:14.214660986 -0800
@@ -2086,6 +2086,9 @@ static struct  hv_driver netvsc_drv = {
 	.id_table = id_table,
 	.probe = netvsc_probe,
 	.remove = netvsc_remove,
+        .driver = {
+               .probe_type = PROBE_PREFER_ASYNCHRONOUS,
+        },
 };
 
 /*
